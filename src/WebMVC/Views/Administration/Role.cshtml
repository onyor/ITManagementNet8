@using ITX.Application.Extensions;
@using ITX.Application.Shared;
@using ITX.WebMVC.Models

@{
    List<TableAuthorityViewModel> TableAuthorityList = new List<TableAuthorityViewModel>();
    TableAuthorityList.Add(new TableAuthorityViewModel()
            {
                TableName = "Role",
                ActionButtonList = new List<string> { "edit", "delete" },
                TopButtonList = new List<string> { "add", "pdf" },
            });
}

@await Html.PartialAsync("_TableAuthority", TableAuthorityList);

@{
    var parents = new Dictionary<string, Dictionary<string, string>>
{
        {
            "MainPage", new Dictionary<string, string> {{"jsonKey", "Anasayfa"}}
        },
        {
            "HasSub", new Dictionary<string, string> {{"jsonKey", "Yetkilendirme" }}
        },
        {
            "ActivePage", new Dictionary<string, string> {{"jsonKey", "Rol Tanım" }}
        }
    };
}

<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        @await Html.PartialAsync("_Breadcrumb", parents)
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="table-responsive h-scrollbar-primary">
                                    @{
                                        var RoleActionsString = TempData["RoleActionsString"] as string;
                                        var RoleTopButtonsString = TempData["RoleTopButtonsString"] as string;
                                    }
                                    <table id="RoleTable" data-topButtons="@RoleTopButtonsString" class="table table-bordered table-hover table-striped w-100 nowrap display compact" data-responsive="false">
                                        <thead>
                                            <tr>
                                                <th col-data="Name">Rol Adı</th>
                                                <th col-data="Description">Rol Açıklaması</th>
                                                @if (!string.IsNullOrEmpty(RoleActionsString))
                                                {
                                                    <th col-role="action" action-list="@RoleActionsString">İşlemler</th>
                                                }
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div>

<div id="RoleModal" aria-hidden="true" aria-labelledby="modalCaption" class="modal fade" data-backdrop="static" data-keyboard="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="ModalCaption" class="form-span">Rol Ekle/Güncelle</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <form name="RoleForm" autocomplete="off">
                        <input id="hdnDataId" name="Id" type="hidden" value="" data-id-type="guid" />
                        <div class="row">
                            <div class="col">
                                <label for="name" class="form-label">Rol Adı</label>
                                <input type="text" class="form-control form-control-xs" id="Name" name="Name" required />
                            </div>
                            <div class="col">
                                <label for="description" class="form-label">Rol Açıklaması</label>
                                <input type="text" class="form-control form-control-xs" id="Description" name="Description" required />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-content="remove" data-dismiss="modal" type="button">
                    Vazgeç
                </button>
                @if (User.HasClaim(c => c.Type == "Save" && c.Value == "True"))
                {
                    <button class="btn btn-primary" id="addRowBtn" data-role="save" type="button">
                        Kaydet
                    </button>
                }
            </div>
        </div>
    </div>
</div>