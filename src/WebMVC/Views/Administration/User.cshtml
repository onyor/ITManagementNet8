@using ITX.WebMVC.Models
@{
    var parents = new Dictionary<string, Dictionary<string, string>>
{
        {
            "MainPage", new Dictionary<string, string> {{"jsonKey", "Anasayfa"}}
        },
        {
            "HasSub", new Dictionary<string, string> {{"jsonKey", "Yetkilendirme" }}
        },
        {
            "ActivePage", new Dictionary<string, string> {{"jsonKey", "Kullanıcı Listesi" }}
        }
    };
}

@{
    List<TableAuthorityViewModel> TableAuthorityList = new List<TableAuthorityViewModel>();
    TableAuthorityList.Add(new TableAuthorityViewModel()
            {
                TableName = "User",
                ActionButtonList = new List<string> { "loginAs", "edit", "passive" },
                TopButtonList = new List<string> { "add", "switch" },
            });
}

@await Html.PartialAsync("_TableAuthority", TableAuthorityList);

<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        @await Html.PartialAsync("_Breadcrumb", parents)
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="table-responsive h-scrollbar-primary">
                                    @{
                                        var UserActionsString = TempData["UserActionsString"] as string;
                                        var UserTopButtonsString = TempData["UserTopButtonsString"] as string;
                                    }
                                    <table id="UserTable" data-topButtons="@UserTopButtonsString" data-fixedRightColumns="1" class="table table-bordered table-hover table-striped w-100 nowrap display compact" data-responsive="false">
                                        <thead>
                                            <tr role="row">
                                                <th col-data="Name" orderable>Ad</th>
                                                <th col-data="Surname" orderable>Soyad</th>
                                                <th col-data="UserName" col-type='copy' orderable>Kullanıcı Adı</th>
                                                <th col-data="Email" col-type='copy' orderable>E Posta</th>
                                                <th col-data="RoleNames">Roller</th>
                                                <th col-role="action" col-rule="active" action-list="active">İşlemler</th>
                                                <th col-role="action" col-rule="passive" action-list="@UserActionsString">İşlemler</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div>

<div id="UserModal" aria-hidden="true" aria-labelledby="modalCaption" class="modal fade" data-backdrop="static" data-keyboard="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="modalCaption" class="form-span">Kullanıcı Ekle/Güncelle</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form name="UserForm" autocomplete="off">
                    <input type="hidden" id="hdnDataId" name="Id" value="" data-id-type="guid" />
                    <input id="hdnDataIsActive" name="IsActive" type="hidden" value="true" data-fixedvalue data-id-type="bool" />
                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="name">Ad</label>
                            <input type="text" id="Name" name="Name" class="form-control form-control-xs" autocomplete="off" required />
                        </div>
                        <div class="col">
                            <label class="form-label" for="surname">Soyad</label>
                            <input type="text" id="Surname" name="Surname" class="form-control form-control-xs" autocomplete="off" required />
                        </div>
                        <div class="col">
                            <label class="form-label" for="UserName">Kullanıcı Adı</label>
                            <input type="text" id="UserName" name="UserName" class="form-control form-control-xs" autocomplete="off" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="Email">E Posta</label><div class="input-group">
                                @*   <div class="input-group-prepend ">
                                <span class="input-group-text form-control form-control-xs"><i class="fal fa-mouse-pointer width-1 text-align-center"></i></span>
                                </div>*@
                                <input type="text" id="Email" name="Email" class="form-control form-control-xs" autocomplete="off" required />
                            </div>
                        </div>
                        <div class="col">
                            <label class="form-label" for="Password">Şifre</label>
                            <input type="password" id="Password" name="Password" class="form-control form-control-xs" minlength="8" autocomplete="off" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="Title">Unvan</label>
                            <input type="text" id="Title" name="Title" class="form-control form-control-xs" autocomplete="off" />
                        </div>
                        <div class="col">
                            <label class="form-label" for="PhoneNumber">Telefon Numarası</label>
                            <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control form-control-xs" autocomplete="off" @* data-inputmask="'mask': '(999) 999-9999'" *@ />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="RoleList">Rol Listesi</label>
                            <select id="RoleList" name="RoleList" class="mul-select" multiple="multiple" style="width: 1000px; margin-bottom:  100px;" tabindex="-1" aria-hidden="true" required>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-content="remove" data-dismiss="modal" type="button">
                    Vazgeç
                </button>
                @if (User.HasClaim(c => c.Type == "Save" && c.Value == "True"))
                {
                    <button class="btn btn-primary" id="addRowBtn" data-role="save" type="button">
                        Kaydet
                    </button>
                }
            </div>
        </div>
    </div>
</div>


@await Html.PartialAsync("_Delete")

