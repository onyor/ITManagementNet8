@{
    var parents = new Dictionary<string, Dictionary<string, string>>
    {
        {
            "MainPage", new Dictionary<string, string> {{"jsonKey", "Anasayfa"}}
        },
        {
            "HasSub", new Dictionary<string, string> {{"jsonKey", "Kurum Yönetim" }}
        },
        {
            "ActivePage", new Dictionary<string, string> {{"jsonKey", "Duyuru" }}
        }
    };
}
<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        @await Html.PartialAsync("_Breadcrumb", parents)
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col">
                                <div class="table-responsive h-scrollbar-primary">
                                    <table id="AnnounceTable" data-topButtons="add" data-visibleArray="2" class="table table-bordered table-hover table-striped w-100 nowrap display compact" data-responsive="false">
                                        <thead>
                                            <tr>
                                                <th col-data='Title' title='Baslik' orderable>Başlık</th>
                                                <th col-data='IsPublish' title='Icerik' col-type="bool" orderable>Aktif/Pasif</th>
                                                <th col-data='Order' col-align='center' title='Sira' orderable>Sıra</th>
                                                <th col-data='EndDate' col-type="dateNoTime" col-align='center' title='Sira' orderable>Duyuru Sona Erme Tarihi</th>
                                                <th col-role='action' action-list='switch/isPublish,edit,delete'>İşlemler</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div>

<div id="AnnounceModal" aria-hidden="true" aria-labelledby="modalCaption" class="modal fade" data-backdrop="static" data-keyboard="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="modalCaption" class="form-span">Duyuru Ekle/Güncelle</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form name="AnnounceForm">
                    <input type="hidden" id="hdnDataId" name="Id" value="" data-id-type="number" />
                    <input type="hidden" id="hdnDataIsPublish" name="IsPublish" data-fixedvalue value="true" />
                    <div class="row">
                        <div class="col">
                            <label for="Title" class="form-label">Başlık</label>
                            <input type="text" id="Title" name="Title" class="form-control form-control-xs" />
                        </div>
                        <div class="col">
                            <label for="Order" class="form-label">Sıra</label>
                            <input type="number" id="Order" name="Order" class="form-control form-control-xs" maxlength="11" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="EndDate" class="form-label">Duyurunun Son Gösterim Tarihi</label>
                            <input id="EndDate" name="EndDate" type="date" class="form-control form-control-xs flatpickr flatpickr-input" required="" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="Content" class="form-label">İçerik</label>
                            <textarea type="text" id="Content" name="Content" class="form-control form-control-xs js-summernote" rows="5"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-content="remove" data-dismiss="modal" type="button">
                    Vazgeç
                </button>
                <button class="btn btn-primary" data-role="save" type="button">
                    Kaydet
                </button>
            </div>
        </div>
    </div>
</div>
