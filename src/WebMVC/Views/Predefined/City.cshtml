@using ITX.WebMVC.Models
@{
    var parents = new Dictionary<string, Dictionary<string, string>>
{
        {
            "MainPage", new Dictionary<string, string> {{"jsonKey", "Anasayfa"}}
        },
        {
            "HasSub", new Dictionary<string, string> {{"jsonKey", "Kurumsal Tanımlamalar" }}
        },
        {
            "ActivePage", new Dictionary<string, string> {{"jsonKey", "İl Tanım" }}
        }
    };
}

@{
    List<TableAuthorityViewModel> TableAuthorityList = new List<TableAuthorityViewModel>();
    TableAuthorityList.Add(new TableAuthorityViewModel()
            {
                TableName = "City",
                ActionButtonList = new List<string> { "edit", "delete" },
                TopButtonList = new List<string> { "add" },
            });
}

@await Html.PartialAsync("_TableAuthority", TableAuthorityList);

<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        @await Html.PartialAsync("_Breadcrumb", parents)
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col">
                                <div class="table-responsive h-scrollbar-primary">
                                    @{
                                        var CityActionsString = TempData["CityActionsString"] as string;
                                        var CityTopButtonsString = TempData["CityTopButtonsString"] as string;
                                    }
                                    <table id="CityTable" data-topButtons="@CityTopButtonsString" class="table table-bordered table-hover table-striped w-100 nowrap display compact" data-responsive="false">
                                        <thead>
                                            <tr>
                                                <th col-data="Name" orderable>İl</th>
                                                <th col-data="Code" orderable>Plaka</th>
                                                <th col-data="CountryIdAd" col-dynamic="Domain_" col-noSearchable orderable>Ülke Adı</th>
                                                <th col-data="PhoneCode" col-noSearchable orderable>Telefon Kodu</th>
                                                @if (!string.IsNullOrEmpty(CityActionsString))
                                                {
                                                    <th col-role="action" action-list="@CityActionsString">İşlemler</th>
                                                }
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div>

<div id="CityModal" aria-hidden="true" aria-labelledby="modalCaption" class="modal fade" data-backdrop="static" data-keyboard="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="modalCaption" class="form-span">İl Tanım Ekle/Güncelle</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form name="CityForm" autocomplete="off">
                    <input type="hidden" id="hdnDataId" name="Id" value="" data-id-type="number" />
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="Name" class="form-label">*Ad</label>
                            <input type="text" id="Name" name="Name" class="form-control form-control-xs" required />
                        </div>
                        <div class="col-sm-3">
                            <label for="CountryId" class="form-label">* Ülke Ad</label>
                            <select id="CountryId" name="CountryId" class="form-control form-control-xs" opt-sel2="true" data-type="static" source="Predefined/GetAll/Country" data-text="name" data-value="id">
                            </select>
                        </div>
                        <div class="col">
                            <label for="UserId" class="form-label">İl Yöneticisi</label>
                            <select id="UserId" name="UserId" class="form-control form-control-xs col" opt-sel2="true" data-type="static" source="Identity/GetAll/User" data-text="fullname" data-value="id" opt-initialText>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <label for="Code" class="form-label">* Plaka Kod</label>
                            <input type="text" id="Code" name="Code" class="form-control form-control-xs" required />
                        </div>
                        <div class="col-3">
                            <label for="PhoneCode" class="form-label">* Telefon Kod</label>
                            <input type="text" id="PhoneCode" name="PhoneCode" class="form-control form-control-xs" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label for="Lat" class="form-label">Lat</label>
                            <input type="number" id="Lat" name="Lat" class="form-control form-control-xs" />
                        </div>
                        <div class="col-6">
                            <label for="Lng" class="form-label">Long</label>
                            <input type="number" id="Lng" name="Lng" class="form-control form-control-xs"  />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-content="remove" data-dismiss="modal" type="button">
                    Vazgeç
                </button>
                @if (User.HasClaim(c => c.Type == "Save" && c.Value == "True"))
                {
                    <button class="btn btn-primary" id="addRowBtn" data-role="save" type="button">
                        Kaydet
                    </button>
                }
            </div>
        </div>
    </div>
</div>
