@using ITX.WebMVC.Models
@{
    var parents = new Dictionary<string, Dictionary<string, string>>
{
        {
            "MainPage", new Dictionary<string, string> {{"jsonKey", "Anasayfa"}}
        },
        {
            "HasSub", new Dictionary<string, string> {{"jsonKey", "Kurumsal Tanımlamalar" }}
        },
        {
            "ActivePage", new Dictionary<string, string> {{"jsonKey", "Uygulama Ayar" }}
        }
    };
}

@{
    List<TableAuthorityViewModel> TableAuthorityList = new List<TableAuthorityViewModel>();
    TableAuthorityList.Add(new TableAuthorityViewModel()
            {
                TableName = "AppSetting",
                ActionButtonList = new List<string> { "edit", "delete" },
                TopButtonList = new List<string> { "add" },
            });
}

@await Html.PartialAsync("_TableAuthority", TableAuthorityList);

<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        @await Html.PartialAsync("_Breadcrumb", parents)
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col">
                                <div class="table-responsive h-scrollbar-primary">
                                    @{
                                        var AppSettingActionsString = TempData["AppSettingActionsString"] as string;
                                        var AppSettingTopButtonsString = TempData["AppSettingTopButtonsString"] as string;
                                    }
                                    <table id="AppSettingTable" data-topButtons="@AppSettingTopButtonsString" class="table table-bordered table-hover table-striped w-100 nowrap display compact" data-responsive="false">
                                        <thead>
                                            <tr>
                                                <th col-data="Ad" orderable>Ad</th>
                                                <th col-data="Aciklama" orderable>Açıklaması</th>
                                                <th col-data="Deger">Değer</th>
                                                @if (!string.IsNullOrEmpty(AppSettingActionsString))
                                                {
                                                    <th col-role="action" action-list="@AppSettingActionsString">İşlemler</th>
                                                }
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div>

<div id="AppSettingModal" aria-hidden="true" aria-labelledby="modalCaption" class="modal fade" data-backdrop="static" data-keyboard="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="modalCaption" class="form-span">AppSetting Ekle/Güncelle</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form name="AppSettingForm" autocomplete="off">
                    <input type="hidden" id="hdnDataId" name="Id" value="" data-id-type="number" />
                    <div class="row">
                        <div class="col">
                            <label for="Ad" class="form-label">Ad</label>
                            <input type="text" id="Ad" name="Ad" class="form-control form-control-xs" required />

                        </div>
                        <div class="col">
                            <label for="Aciklama" class="form-label">Açıklama</label>
                            <input type="text" id="Aciklama" name="Aciklama" class="form-control form-control-xs" />

                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="EnmVeriTipId" class="form-label">* Veri Tip</label>
                            <select id="EnmVeriTipId" name="EnmVeriTipId" class="form-control form-control-xs" opt-sel2="true" data-type="static" source="Forms/GetEnumList/VeriTip" opt-sel2="false" data-text="ad" data-value="deger">
                            </select>
                        </div>
                        <div class="col">
                            <label for="Deger" class="form-label">Değer</label>
                            <input type="text" id="Deger" name="Deger" class="form-control form-control-xs" required />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-content="remove" data-dismiss="modal" type="button">
                    Vazgeç
                </button>
                @if (User.HasClaim(c => c.Type == "Save" && c.Value == "True"))
                {
                    <button class="btn btn-primary" id="addRowBtn" data-role="save" type="button">
                        Kaydet
                    </button>
                }
            </div>
        </div>
    </div>
</div>
