@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "Shared/_AccountLayout.cshtml";
}

<div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0">
    <div class="row">
        <div class="col-xl-12 cs mb-3">
            <h2 class="fs-xxl fw-500 mt-4 text-white text-center">
                <strong data-translate="login.ForgotPassword"></strong>
                <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down" data-translate="login.NoProblem">
                </small>
            </h2>
        </div>
        <div class="col-xl-6 ml-auto mr-auto">
            <div class="card p-4 rounded-plus bg-faded">
                <form id="js-login" name="SendMailForm" novalidate="" action="intel_analytics_dashboard.html">
                    <div class="form-group">
                        <label class="form-label" for="lostaccount" data-translate="form.Email"></label>
                        <input type="email" id="lostaccount" name="email" class="form-control" placeholder="Kurtarma E-Posta" required>
                        <div class="invalid-feedback" data-translate="login.InvalidFeedback"></div>
                        <div class="help-block" data-translate="login.HelpFeedback"></div>

                        @*We will email you the instructions*@
                    </div>
                    <div class="row no-gutters">
                        <div class="col col-md-4 ml-auto text-right">
                            <button id="sendMail" type="button" class="btn btn-primary btn-lg waves-effect waves-themed" data-translate="common.Send"></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
