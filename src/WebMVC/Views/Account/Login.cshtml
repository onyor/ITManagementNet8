@model ITX.WebMVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "Shared/_AccountLayout.cshtml";
}

<style type="text/css">
    /* width */
    ::-webkit-scrollbar {
        width: 10px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #888;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

    .canvas-back {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    .card {
        cursor: pointer;
        /*width: 400px;*/
        height: auto;
        transition: box-shadow 0.3s ease;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

        .card:hover {
            box-shadow: rgba(0, 0, 0, 0.7) 0px 8px 20px;
        }

    .cardSectionRow {
        align-items: center;
    }

        .cardSectionRow .card {
            height: 30vh !important; /* Kartın maksimum yüksekliği 90vh olacak. */
            transition: all 0.3s ease-in-out; /* Pürüzsüz geçiş efekti için. */
        }

    a[target]:not(.btn) {
        text-decoration: none !important;
    }


    @@media (max-width: 1200px) {
        p {
            font-size: 1rem !important;
        }

        .cardSectionRow .card {
            height: auto !important;
        }
    }

    @@media (max-width: 992px) {
        #cardSection {
            height: 100vh;
            overflow: auto;
        }
    }

    @@media (max-width: 768px) {
        /* img {
                    max-width: 30% !important;
                } */

        .align-items-center {
            align-items: normal !important;
        }
    }

    @@media (max-width: 576px) {
    }

    .customMaterialLi {
        cursor: pointer;
    }

    .wrap-carousel {
        padding-right: 2rem;
        max-height: 13rem;
        min-height: 13rem;
    }

        .wrap-carousel .carousel-inner {
            max-height: 30rem;
            overflow-y: auto;
        }

        .wrap-carousel .header {
            font-size: 1rem;
        }

        .wrap-carousel .carousel-indicators {
            background: #181818;
            border-radius: 10px;
            margin-bottom: 1rem;
            position: unset !important;
        }

    #cardSection .card {
        border-radius: 20px;
    }

        #cardSection .card .card-body .col {
            display: flex;
            justify-content: space-around;
            align-items: center;
            height: 100%;
            flex-direction: column;
        }

    #loginSection {
        border-radius: 20px;
        background-color: rgb(255 255 255 / 40%);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        height: 100vh;
    }

    .psychoSupportCard {
        background-color: rgb(255 255 255 / 40%);
        cursor: default;
        -webkit-backdrop-filter: blur(5px);
        backdrop-filter: blur(5px);
        justify-content: center;
        align-items: center;
    }

    .materialListGroup {
        /* height: 30vh !important; */
        overflow-y: auto;
    }

    .list-group {
        border-radius: 20px;
        /* height: 30vh !important; */
        justify-content: center;
    }

    .list-group-item {
        background-color: #2223ee;
        border: none;
    }

    .spinner {
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-left-color: #ffffff;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .scrollable-div::-webkit-scrollbar {
        display: none; /* Webkit tarayıcılar için scroll çubuğunu gizler */
    }

    .scrollable-div {
        -ms-overflow-style: none; /* Internet Explorer ve Edge için */
        scrollbar-width: none; /* Firefox için */
        overflow-y: scroll; /* Dikey kaydırma aktif ama çubuk gizli */
    }

    #cardSection .card {
        display:flex;
        justify-content:center;
    }
</style>

<div id="back">
    <canvas id="canvas" class="canvas-back"></canvas>
</div>

<div class="container-fluid" style="height:auto; overflow:auto;">
    <div class="row justify-content-center" style="height: 100%;">
        <div id="loginSection" class="col-xxl-3 col-xl-3 col-lg-4 col-md-6 col-sm-12 border-right"
             style="@(ViewData.ModelState.IsValid ? "display:none" : "");">
            <div class="offset-1 col-10 mt-5">
                <button class="closeLoginSection mt-5 mb-5 offset-11">
                    <i class="fas fa-backward" style="font-size: 1.3rem;"></i>
                </button>

                <div class="col mt-3 mb-3 login200-form-title">
                    <div class="row justify-content-center align-items-center">
                        <img src="~/app/images/onyore.png" style="max-width:50%" alt="Gençlik ve Spor Bakanlığı" aria-roledescription="logo" />
                    </div>
                    <hr style="border-bottom: 1px solid #e5e5e5;" />
                    <div class="row justify-content-center align-items-center mt-3">
                        <span style="color: #5e5e5e;font-weight:700;font-size:18px;font-family: 'Montserrat-Bold';">Yönetim Portalı</span>
                    </div>
                </div>

                <form id="LoginForm" name="LoginForm" class="login200-form validate-form" action="/Account/Login" method="post">
                    @* <div class="wrap-input100 validate-input" data-validate="Kullanıcı Adı Gerekli"> *@
                    <div class="wrap-input100">
                        <input id="userName" class="input100" type="text" name="UserName" placeholder="Kullanıcı Adı">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>

                    @* <div class="wrap-input100 validate-input" data-validate="Şifre gerekli"> *@
                    <div class="wrap-input100">
                        <input id="password" class="input100" type="password" name="Password" placeholder="Parola" autocomplete="current-password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="wrap-input100">
                        <input id="CitizenNo" class="input100" type="text" name="CitizenNo" placeholder="T.C. Kimlik No">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-sign-in-alt" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(model => model.CitizenNo, "", new { @class = "text-danger" })
                    </div>

                    <div class="container-login100-form-btn">
                        <button id="loginBtn" type="submit" data-toggle="tooltip" class="login100-form-btn ajax-block">
                            GİRİŞ
                        </button>
                    </div>
                </form>
            </div>
        </div>
