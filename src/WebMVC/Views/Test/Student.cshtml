@using ITX.WebMVC.Models
@{
    var parents = new Dictionary<string, Dictionary<string, string>>
{
    {
        "MainPage", new Dictionary<string, string> {{"jsonKey", "Anasayfa"}}
    },
    {
        "HasSub", new Dictionary<string, string> {{"jsonKey", "Test" } }
    },
    {
        "ActivePage", new Dictionary<string, string> {{"jsonKey", "Student" } }
    }
};
}

@{
    List<TableAuthorityViewModel> TableAuthorityList = new List<TableAuthorityViewModel>();
    TableAuthorityList.Add(new TableAuthorityViewModel()
            {
                TableName = "Student",
                ActionButtonList = new List<string> { "edit", "delete" },
                TopButtonList = new List<string> { "add" },
            });
}

@await Html.PartialAsync("_TableAuthority", TableAuthorityList);

<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        @await Html.PartialAsync("_Breadcrumb", parents)
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col">
                                <div class="table-responsive h-scrollbar-primary">
                                    @{
                                        var StudentActionsString = TempData["StudentActionsString"] as string;
                                        var StudentTopButtonsString = TempData["StudentTopButtonsString"] as string;
                                    }
                                    <table id="StudentTable" data-topButtons="@StudentTopButtonsString" class="table table-bordered table-hover table-striped w-100 nowrap display compact" data-responsive="false">
                                        <thead>
                                            <tr role="row">
                                                <th col-data='Name'>Öğrenci Adı</th>
                                                <th col-data='CityIdName' col-align='center'>Şehir Adı</th>
                                                <th col-data='ScenarioIdName' col-align='center'>Senaryo Adı</th>
                                                <th col-data='Lessons' col-align='center'>Dersler</th>
                                                @if (!string.IsNullOrEmpty(StudentActionsString))
                                                {
                                                    <th col-role="action" action-list="@StudentActionsString">İşlemler</th>
                                                }
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="page-content-overlay" data-action="toggle" data-class="mobile-nav-on"></div>

<div id="StudentModal" aria-hidden="true" aria-labelledby="modalCaption" class="modal fade" data-backdrop="static" data-keyboard="true" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="modalCaption" class="form-span">Student Ekle/Güncelle</span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">
                        <i class="fal fa-times"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form name="StudentForm">
                    <input id="hdnDataId" name="Id" type="hidden" value="" data-id-type="number" />
                    <div class="row">
                        <div class="col">
                            <label for="Name" class="form-label">Adı</label>
                            <input type="text" id="Name" name="Name" class="form-control form-control-xs" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="CityId" class="form-label">Şehir Adı</label>
                            <select id="CityId" name="CityId" class="form-control form-control-xs" data-type="static" opt-sel2="true" source="Predefined/GetAll/City" data-text="name" data-value="id" opt-initialText>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="ScenarioId" class="form-label">Senaryo</label>
                            <select id="ScenarioId" name="ScenarioId" class="form-control form-control-xs" data-type="static" opt-sel2="true" source="Test/GetAll/Scenario" data-text="name" data-value="id" opt-initialText>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="LessonIds" class="form-label">Dersler</label>
                            <select id="LessonIds" name="LessonIds" class="form-control form-control-xs mul-select" multiple="multiple" opt-sel2="true" data-type="static" source="Test/GetAll/Lesson" data-text="name" data-value="id">
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-content="remove" data-dismiss="modal" type="button">
                    İptal
                </button>
                <button class="btn btn-primary" data-role="save" type="button">
                    Kaydet
                </button>
            </div>
        </div>
    </div>
</div>
